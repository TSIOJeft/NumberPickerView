<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape>
            <corners android:radius="10dp" />
            <gradient
                android:angle="90"
                android:endColor="#795548"
                android:startColor="#4E342E"
                android:type="linear">

            </gradient>

        </shape>
    </item>
    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape android:shape="rectangle"
            >
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item
        android:height="40dp"
        android:gravity="top"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />

            <gradient
                android:angle="270"
                android:endColor="@android:color/transparent"
                android:startColor="#55000000"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:height="40dp"
        android:bottom="5dp"
        android:gravity="bottom"
        android:left="5dp"
        android:right="5dp">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp" />
            <gradient
                android:angle="270"
                android:endColor="#22000000"
                android:startColor="@android:color/transparent"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
<shape>
    <corners android:radius="10dp"/>
    <stroke android:width="3dp" android:color="#212121"/>
</shape>
    </item>
</layer-list>